@model IList<ProfessionViewModel>
@{
    var prefix = ViewData.TemplateInfo.HtmlFieldPrefix;
    ViewData.TemplateInfo.HtmlFieldPrefix = String.Empty;
}
@if (Model != null && Model.Any())
{
    <div>
        <select class="profession-selection" data-url="@Url.Action("GetDegrees", "Education")">
            @for (int i = 0; i < Model.Count; ++i)
            {
                string selected = Model[i].IsSelected ? "selected" : "";
                <option value="@Model[i].Id" @selected>@Model[i].Title</option>
            }
        </select>
    </div>
}