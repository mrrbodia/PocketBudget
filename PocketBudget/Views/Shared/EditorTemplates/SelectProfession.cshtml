@model IList<ProfessionViewModel>
@{
    var prefix = ViewData.TemplateInfo.HtmlFieldPrefix;
    ViewData.TemplateInfo.HtmlFieldPrefix = String.Empty;
}
@if (Model != null && Model.Any())
{
    <div>
        <select class="graph-updater profession-selection">
            @for (int i = 0; i < Model.Count; ++i)
            {
                string selected = Model[i].IsSelected ? "selected" : "";
                <option value="@Model[i].Id" @selected>@Model[i].Title</option>
            }
        </select>
        @*@for (int i = 0; i < Model.Count; ++i)
        {
            <div class="education-degrees @string.Format("{0}{1}", prefix.Replace('.', '-'), i)">
                @Html.EditorFor(m => Model[i], null, String.Format("{0}[{1}]", prefix, i))
            </div>
        }*@
    </div>
}